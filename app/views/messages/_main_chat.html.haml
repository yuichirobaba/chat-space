.chat-main 
  .main-header
    .main-header__group
      =@group.name
        .main-header__group__member
          Member:
            .main-header__group__member__list
              =@group.users.name
    .main-header__edit
      =link_to edit_group_path(@group) do
        Edit
  .messages
    =render @messages
     
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__new', placeholder: 'type a message' 
      .input-text
        = f.label :image, class: 'input-text__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class:'input-text__image__file'
      = f.submit 'Send', class: 'form__submit'